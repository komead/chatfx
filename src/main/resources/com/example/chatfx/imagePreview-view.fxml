<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.chatfx.controllers.ImagePreviewController">
    <ImageView fx:id="image_iv" fitHeight="400" fitWidth="600" nodeOrientation="INHERIT" preserveRatio="true">
      <VBox.margin>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </VBox.margin></ImageView>
    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="send_btn" text="Отправить" />
        <Button fx:id="cancel_btn" text="Отмена" />
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin>
    </HBox>
</VBox>
