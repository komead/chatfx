<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<SplitPane dividerPositions="0.8" prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.chatfx.controllers.MainController">
   <items>
      <VBox alignment="CENTER" spacing="5.0">
          <padding>
              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
          </padding>

          <ScrollPane fx:id="scrollPane" fitToWidth="true" VBox.vgrow="ALWAYS">
              <VBox fx:id="output_vb">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding></VBox>
          </ScrollPane>

          <Label fx:id="info" textFill="RED">
              <VBox.margin>
                  <Insets />
              </VBox.margin>
          </Label>

         <HBox alignment="CENTER" spacing="20.0">

             <TextField fx:id="input_tf" onKeyPressed="#onPressedKeyHandler" HBox.hgrow="ALWAYS" />
            <Button mnemonicParsing="false" onAction="#onUploadButtonClick" text="Img" />
      
             <Button onAction="#onSendButtonClick" text="Send" />
         </HBox>
      </VBox>
      <VBox alignment="CENTER">
         <children>
            <Label text="Online:">
               <VBox.margin>
                  <Insets bottom="5.0" top="10.0" />
               </VBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <ScrollPane fitToHeight="true" fitToWidth="true" VBox.vgrow="ALWAYS">
               <content>
                  <VBox fx:id="users_vb" prefHeight="200.0" prefWidth="100.0" />
               </content>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </ScrollPane>
            <Button fx:id="uncheck_btn" onAction="#onUncheckButtonClick" mnemonicParsing="false" text="Uncheck">
               <VBox.margin>
                  <Insets bottom="10.0" top="5.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </items>
</SplitPane>
