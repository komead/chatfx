<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.chatfx.controllers.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <TextArea fx:id="output_ta" editable="false" />

    <Label fx:id="info" textFill="RED">
        <VBox.margin>
            <Insets bottom="10.0" top="10.0" />
        </VBox.margin>
    </Label>

   <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">

       <padding>
           <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
       </padding>

       <TextField fx:id="input_tf" prefWidth="100.0" />

       <Button onAction="#onSendButtonClick" text="Send" />
   </HBox>
</VBox>
