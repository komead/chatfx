<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.chatfx.controllers.AuthorizationController">
    <padding>
        <Insets bottom="20.0" left="50.0" right="50.0" top="20.0" />
    </padding>
   <VBox>
      <children>
         <Label text="Enter username:" />
      
            <TextField fx:id="login_tf" />
      </children>
   </VBox>
   <VBox>
      <children>
         <Label text="Enter password:" />
            <PasswordField fx:id="password_tf" />
      </children>
      <VBox.margin>
         <Insets top="20.0" />
      </VBox.margin>
   </VBox>
   <Label fx:id="info">
      <VBox.margin>
         <Insets bottom="10.0" top="10.0" />
      </VBox.margin>
   </Label>
   <HBox alignment="CENTER" spacing="30.0">
      <children>
         <Button mnemonicParsing="false" onAction="#onRegisterButtonClick" text="Register" />
         <Button mnemonicParsing="false" onAction="#onLoginButtonClick" text="Login" />
      </children>
   </HBox>
</VBox>
