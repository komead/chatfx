<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER"
      xmlns="http://javafx.com/javafx/17.0.6"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.chatfx.controllers.AuthorizationController">
    <padding>
        <Insets bottom="20.0" left="50.0" right="50.0" top="20.0" />
    </padding>
   <VBox>
      <children>
         <Label text="Enter username:" />
      
            <TextField fx:id="login_tf" />
      </children>
   </VBox>
   <VBox>
      <children>
         <Label text="Enter password:" />
            <PasswordField fx:id="password_tf" />
      </children>
      <VBox.margin>
         <Insets bottom="30.0" top="20.0" />
      </VBox.margin>
   </VBox>
   <HBox alignment="CENTER" spacing="30.0">
      <children>
         <Button mnemonicParsing="false"
                 text="Register"
                 onAction="#onRegisterButtonClick"
         />
         <Button mnemonicParsing="false"
                 text="Login"
                 onAction="#onLoginButtonClick"
         />
      </children>
   </HBox>
</VBox>
